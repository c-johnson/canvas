{
  "name": "canvas",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "run-p -l dev-core dev-hub dev-example",
    "dev-core": "npm run dev --workspace=canvas-core -- --preserveWatchOutput --pretty",
    "dev-example": "npm run start --workspace=canvas-example-app -- --preserveWatchOutput --pretty",
    "dev-hub": "export FORCE_COLOR=1 && npm run dev --workspace=canvas-hub",
    "build": "run-s -l build-core build-hooks build-hub",
    "build-core": "npm run build --workspace=canvas-core -- --pretty",
    "build-hooks": "npm run build --workspace=canvas-hooks -- --pretty",
    "build-hub": "export FORCE_COLOR=1 && npm run build --workspace=canvas-hub",
    "start": "npm run start --workspace=canvas-hub",
    "test": "npm run test --workspace=canvas-core"
  },
  "workspaces": [
    "packages/canvas-cli",
    "packages/canvas-hub",
    "packages/canvas-core",
    "packages/canvas-hooks",
    "packages/example"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
