{
  "name": "canvas",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "run-p -l dev-core dev-hooks dev-example",
    "dev-core": "npm run dev --workspace=@canvas-js/core -- --preserveWatchOutput --pretty",
    "dev-hooks": "npm run dev --workspace=@canvas-js/hooks -- --preserveWatchOutput --pretty",
    "dev-example": "GENERATE_SOURCEMAP=false npm run dev --workspace=canvas-example-webpack",
    "build": "run-s -l build-core build-hooks",
    "build-core": "npm run build --workspace=@canvas-js/core -- --pretty",
    "build-hooks": "npm run build --workspace=@canvas-js/hooks -- --pretty",
    "publish-cli": "npm publish --workspace=@canvas-js/cli --access public",
    "publish-core": "export FORCE_COLOR=1 && npm run build --workspace=@canvas-js/core && npm publish --workspace=@canvas-js/core --access public",
    "publish-hooks": "npm publish --workspace=@canvas-js/hooks --access public",
    "test": "npm run test --workspace=@canvas-js/core"
  },
  "workspaces": [
    "packages/canvas-cli",
    "packages/canvas-core",
    "packages/canvas-hooks",
    "packages/example-webpack"
  ],
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
