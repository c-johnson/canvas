{
  "name": "canvas",
  "type": "module",
  "scripts": {
    "appstore": "npm run dev --workspace=@canvas-js/example-app-store",
    "dev-example-chat": "GENERATE_SOURCEMAP=false npm run dev --workspace=@canvas-js/example-chat-client",
    "dev": "tsc --build --watch",
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "version": "npm version --git-tag-version=false --workspace=packages --workspace=examples --workspaces-update=true --save --save-exact",
    "publish": "npm publish --workspace=packages --access public",
    "test": "npm run test --workspace=@canvas-js/core"
  },
  "workspaces": [
    "packages/cli",
    "packages/interfaces",
    "packages/core",
    "packages/next",
    "packages/hooks",
    "packages/bootstrap-peer",
    "examples/app-store",
    "examples/chat-webpack",
    "examples/chat-next"
  ]
}
